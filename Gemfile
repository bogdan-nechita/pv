source 'https://rubygems.org'

# Specify the Ruby version
ruby '2.1.5'
# Specify the Rails version
gem 'rails', '4.1.8'
# The api is built using the rails-api gem
gem 'rails-api'
# Use Postgres as the database
gem 'pg'
# Use unicorn as the app server
gem 'unicorn'

group :development do
  gem 'spring'
  gem 'byebug'
end